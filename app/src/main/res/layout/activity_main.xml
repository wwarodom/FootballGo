<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.footballgo.com.myfootball.MainActivity"
    android:background="@drawable/mainbg2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmbasico"
                android:id="@+id/mbasic"
                android:onClick="openmbasic"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mbasicclick"
                android:onClick="enterBasic"
                android:visibility="gone"
                android:id="@+id/menu_1"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmruleso"
                android:id="@+id/mrules"
                android:onClick="openmrules"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mrulesclick"
                android:onClick="enterRules"
                android:visibility="gone"
                android:id="@+id/menu_2"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmplano"
                android:id="@+id/mplan"
                android:onClick="openmplan"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mplanclick"
                android:onClick="enterPlan"
                android:visibility="gone"
                android:id="@+id/menu_3"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmmapo"
                android:id="@+id/mmap"
                android:onClick="openmmap"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mmapclick"
                android:onClick="enterMap"
                android:visibility="gone"
                android:id="@+id/menu_4"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmtraino"
                android:id="@+id/mtrain"
                android:onClick="openmtrain"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mtrainclick"
                android:onClick="enterTrain"
                android:visibility="gone"
                android:id="@+id/menu_5"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmcommito"
                android:id="@+id/mcommit"
                android:onClick="openmcommit"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mcommitclick"
                android:onClick="enterCommit"
                android:visibility="gone"
                android:id="@+id/menu_6"
                android:alpha="0.8"/>
        </LinearLayout>


        </LinearLayout>

</RelativeLayout>
