<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thanachat.myfootball">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fg"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.thanachat.myfootball.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.thanachat.myfootball.RulesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.TrainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.PlanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.APlan1Activity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.BasicActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.VideoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.MapsActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="PUT_YOUR_API_KEY_HERE" />

        <activity android:name="com.thanachat.myfootball.GmapPSU"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.GmapPremierActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.thanachat.myfootball.CommitActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>